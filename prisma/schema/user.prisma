model User {
  id                 String     @id @default(uuid())
  email              String     @unique
  password           String?
  name               String
  role               UserRole   @default(TOURIST)
  needPasswordChange Boolean    @default(false)
  status             UserStatus @default(ACTIVE)
  isVerified         Boolean    @default(false)
  photo              String?
  bio                String?
  contactNo          String?
  address            String?
  gender             Gender?
  
  // Guide Specific Fields (নতুন যোগ করা)
  expertise          String[]     @default([])     // ["History", "Food", "Adventure"]
  languagesSpoken    String[]     @default([])     // ["English", "Spanish", "Bengali"]
  dailyRate          Float?        // Guide এর daily charge
  
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  // Relations
  listings           Listing[]
  bookings           Booking[]
  reviews            Review[]

  @@map("users")
}