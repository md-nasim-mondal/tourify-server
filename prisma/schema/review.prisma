model Review {
  id        String   @id @default(uuid())
  rating    Float      // 1 to 5 stars
  comment   String
  
  // Relations
  touristId String
  tourist   User     @relation(fields: [touristId], references: [id], onDelete: Cascade)

  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  bookingId String?  @unique // Optional initially to avoid migration issues with existing data, but logic should enforce it for new ones
  booking   Booking? @relation(fields: [bookingId], references: [id])

  createdAt DateTime @default(now())

  @@map("reviews")
}