# Server Environment Variables
# Copy this file to .env and fill in your actual values

# Core Configuration
NODE_ENV=development
PORT=5000
DATABASE_URL=postgresql://user:password@localhost:5432/tourify_db
DIRECT_URL=postgresql://user:password@localhost:5432/tourify_db # Required for migrations (Supabase Session Pooler)
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000 # Backend URL (Render Deployment URL)

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_should_be_long_and_random
ACCESS_TOKEN_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_secret_key_here_should_be_long
REFRESH_TOKEN_EXPIRES_IN=7d
RESET_PASS_SECRET=your_reset_secret_key_here
RESET_PASS_TOKEN_EXPIRES_IN=10m
RESET_PASS_LINK=http://localhost:3000/reset-password

# Bcrypt Configuration
SALT_ROUND=10

# Cloudinary Configuration (Image Hosting)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (Gmail App Password)
EMAIL_SENDER_EMAIL=your_email@gmail.com
EMAIL_SENDER_APP_PASS=your_gmail_app_password

# Stripe Configuration (Credit Card Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SSLCommerz Configuration (Local Payment Gateway - Bangladesh)
STORE_ID=your_sslcommerz_store_id
STORE_PASS=your_sslcommerz_store_password
SSL_PAYMENT_API=https://sandbox.sslcommerz.com/gwprocess/v4/api.php
SSL_VALIDATION_API=https://sandbox.sslcommerz.com/validator/api/validationApi.php
SUCCESS_URL=http://localhost:5000/api/payments/ssl-success
FAIL_URL=http://localhost:5000/api/payments/ssl-fail
CANCEL_URL=http://localhost:5000/api/payments/ssl-cancel

# Admin Credentials (Used for seeding)
ADMIN_EMAIL=admin@tourify.com
ADMIN_PASSWORD=Admin@1234

# AI Integration (Optional - for tour recommendations)
OPEN_ROUTER_API_KEY=your_openrouter_api_key
